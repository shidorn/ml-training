generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tasks {
  id        Int       @id @default(autoincrement())
  name      String    @default("")
  mark      Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

model contacts {
  id        Int       @id @default(autoincrement())
  name      String    @default("")
  number    String    @default("")
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

model products {
  id        Int       @id @default(autoincrement())
  name      String    @default("")
  price     Float
  stock     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  habits Habit[]
  Book   Book[]
}

model Habit {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  userId      Int
  user        User    @relation(fields: [userId], references: [id])
  logs        Log[]
}

model Log {
  id      Int      @id @default(autoincrement())
  date    DateTime
  status  Boolean
  habitId Int
  habit   Habit    @relation(fields: [habitId], references: [id])
}

model Book {
  id       Int       @id @default(autoincrement())
  title    String
  author   String
  borrowed Boolean
  userId   Int?
  user     User?     @relation(fields: [userId], references: [id])
  dueDate  DateTime?
}
